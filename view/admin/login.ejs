<%- include('../partials/head') %>

<body>
    <div class="h-screen flex items-center justify-center bg-[#EDEDED]">
        <div class="relative h-[80vh] w-[80vw] mx-auto my-auto rounded-2xl shadow-2xl">
            <div class="flex absolute h-full lg:w-1/2 w-full rounded-tl-2xl rounded-bl-2xl  items-center justify-center">
                <div class="h-[80%] w-[80%] " id="mainsection">
                    <div class="flex justify-center mt-10 h-[70%] w-[70%] mx-auto">
                        <form class="rounded w">
                            <div class="mb-4">
                                <label class="block mb-2" for="username" id="emailLabel">
                                    Email
                                </label>
                                <input
                                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                    id="email" type="text" placeholder="Username">
                            </div>
                            <div class="mb-6">
                                <label class="block mb-2" for="password" id="passLabel">
                                    Password
                                </label>
                                <input
                                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                                    id="password" type="password" placeholder="***************">
                                
                            </div>
                            <div class="flex items-center justify-between">
                                <button
                                    id="login"
                                    class=" mx-auto bg-[#576AFF] hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                                    type="button">
                                    Login
                                </button>

                            </div>
                        </form>
                    </div>
                </div>
                <%- include('../partials/loader') %>
            </div>
            <div
                class="hidden lg:flex absolute left-1/2 h-full w-1/2 rounded-tr-2xl rounded-br-2xl bg-[#5A6195]  items-center justify-center">
                <h1 class="text-5xl font-bold text-white">SHOPPI-Admin</h1>
            </div>
        </div>
    </div>
</body>
<script src="/js/admin/adminLogIn.js"></script>
</html>