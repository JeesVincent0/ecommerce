<%- include('../partials/head') %>
<body>
    <div class="h-screen flex items-center justify-center bg-[#EDEDED]">
        <div class="relative h-[80vh] w-[80vw] mx-auto my-auto rounded-2xl shadow-2xl">
            <div class="flex absolute h-full lg:w-1/2 w-full rounded-tl-2xl rounded-bl-2xl justify-center">
                <div class="w-[80%] my-auto " id="mainsection">
                    <div class="flex justify-center mt-10 h-[70%] w-[70%] mx-auto">
                        <form class="rounded">
                            <div class="mb-4 relative">
                                <label id="emailLabel" class="block mb-2" for="username">
                                    Email
                                </label>

                                <input
                                    class="shadow appearance-none border rounded w-full py-2 px-3 pr-16 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                    id="email" type="text" placeholder="Username" />

                                <button
                                    id="sendButton"
                                    type="button"
                                    class="absolute top-[72%] right-2 transform -translate-y-1/2 bg-blue-500 text-white text-sm px-3 py-1 rounded hover:bg-blue-600">
                                    SEND
                                </button>
                            </div>

                            <div class="mb-6">
                                <label class="block mb-2" for="password" id="otpLabel">
                                    OTP
                                </label>
                                <input
                                    class="shadow appearance-none border-2 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                                    id="otp" type="password" placeholder="*****">
                                
                            </div>
                            <div class="flex items-center justify-between">
                                <button
                                    id="verify"
                                    class=" mx-auto bg-[#576AFF] hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                                    type="button">
                                    Varify
                                </button>

                            </div>
                        </form>
                    </div>
                </div>
                <%- include('../partials/loader') %>
            </div>
            <div
                class="hidden lg:flex absolute left-1/2 h-full w-1/2 rounded-tr-2xl rounded-br-2xl bg-[#576AFF]  items-center justify-center">
                <h1 class="text-5xl font-bold text-white">SHOPPI</h1>
            </div>
        </div>
    </div>
    <script src="/js/forgot.js"></script>
</body>

</html>


