<!-- Add Category Form Section -->
<div class="ml-[20%] mt-16 p-6">
    <div id="addCategoryFormSection">
        <h3 class="text-2xl font-bold mb-4">Create New Category</h3>

        <form id="addCategoryForm" class="space-y-4">
            <div id="categoryNameInputContainer">
                <div class="relative">
                    <label for="categoryType" class="block text-sm font-medium text-gray-700"
                        id="categoriesLabel">Parent Category</label>
                        <span id="selectedParentId" class="hidden"></span>
                    <input type="text" id="mainCategoryName"
                        class="mt-2 border rounded-lg py-2 pl-3 pr-10 w-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="Enter Category Name or Select"
                        name="categoryName">
                    <div class="absolute top-0 right-0 ">
                        <select id="select-field" onchange="catName(this, 'mainCategoryName')"
                            class="mt-7 border-2 border-gray-300 rounded-lg bg-white p-2 w-44 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">Existing Category</option>
                            <div id="optionsContainer1"></div>
                        </select>
                    </div>
                </div>

            </div>

            <div id="categoryDiscription">
                <label class="block text-sm font-medium text-gray-700" id="categoriesLabel">Add
                    Category discription</label>
                    <textarea id="categoryDescription"
                    class="mt-2 border rounded-lg py-2 pl-3 pr-10 w-full h-28 focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"
                    placeholder="Enter Category description. Maximum 50 words" 
                    oninput="limitWords(this, 50)" 
                    name="description"></textarea>
            </div>

            <div>
                <label for="categoryStatus" class="block text-sm font-medium text-gray-700">Status</label>
                <select id="categoryStatus" name="categoryStatus" class="mt-2 w-full px-4 py-2 border rounded-md"
                    required>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>

            <button type="button" onclick="submitNewCategory()" class="w-full px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Add
                Category</button>
        </form>
    </div>
</div>